
@{
    ViewBag.Title = "Daire Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section newmenu
{
    <li><a href="/Flat/Add">Daire</a></li>
}

<h2>Daire Ekle</h2>
<hr />

<form class="form-horizontal">
    <div class="form-group">
        <label for="FlatNo" class="control-label col-xs-2">Daire No</label>
        <div class="col-xs-5">
            <input type="number" class="form-control" id="FlatNo" placeholder="Daire No">
        </div>
    </div>
    <div class="form-group">
        <label for="FloorNo" class="control-label col-xs-2">Kat No</label>
        <div class="col-xs-5">
            <input type="number" class="form-control" id="FloorNo" placeholder="Kat No">
        </div>
    </div>
    <div class="form-group">
        <label for="OwnerName" class="control-label col-xs-2">Sahibi Adı</label>
        <div class="col-xs-5">
            <input type="text" class="form-control" id="OwnerName" placeholder="Sahibi Adı">
        </div>
    </div>
    <div class="form-group">
        <label for="OwnerSurname" class="control-label col-xs-2">Sahibi Soyadı</label>
        <div class="col-xs-5">
            <input type="text" class="form-control" id="OwnerSurname" placeholder="Sahibi Soyadı">
        </div>
    </div>
    <div class="form-group">
        <label for="OwnerPhone" class="control-label col-xs-2">Sahibi Telefon</label>
        <div class="col-xs-5">
            <input type="number" class="form-control" id="OwnerPhone" placeholder="Sahibi Telefon">
        </div>
    </div>

    <div class="form-group">
        <label for="RenterName" class="control-label col-xs-2">Kiracı Adı</label>
        <div class="col-xs-5">
            <input type="text" class="form-control" id="RenterName" placeholder="Kiracı Adı">
        </div>
    </div>
    <div class="form-group">
        <label for="RenterSurname" class="control-label col-xs-2">Kiracı Soyadı</label>
        <div class="col-xs-5">
            <input type="text" class="form-control" id="RenterSurname" placeholder="Kiracı Soyadı">
        </div>
    </div>
    <div class="form-group">
        <label for="RenterPhone" class="control-label col-xs-2">Kiracı Telefon</label>
        <div class="col-xs-5">
            <input type="number" class="form-control" id="RenterPhone" placeholder="Kiracı Telefon">
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit" class="btn btn-primary">Daire Ekle</button>
        </div>
    </div>
</form>